function Get-HiddenFiles {
    <#
    .SYNOPSIS
    Muestra archivos ocultos de una carpeta en especÃ­fico.
    
    .PARAMETER FolderPath
    Ruta de la carpeta a analizar.

    .EXAMPLE
    Get-HiddenFiles -FolderPath "C:\Carpeta"
    #>

    [CmdletBinding()]
    param (
        [Parameter(Mandatory = $true)]
        [string]$FolderPath
    )
    
    try {
        # Activar el modo estricto
        Set-StrictMode -Version Latest
        
        # Comprobar si la carpeta existe
        if (-not (Test-Path -Path $FolderPath)) {
            throw "La carpeta no existe: $FolderPath"
        }

        # Obtener archivos ocultos
        Get-ChildItem -Path $FolderPath -Hidden -File
    }
    catch {
        Write-Error "Error al listar archivos ocultos: $_"
    }
}
